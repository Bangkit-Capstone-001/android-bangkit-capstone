<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Feature02.WorkoutFinish.WorkoutFinishActivity">

    <!--    Konsensus ID-->
    <!--    location_layout_name-->
    <!--    cth : workoutFinish_cl_something-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/workoutFinish_cl_pageTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/workoutFinish_tv_pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Workout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#223767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/workoutFinish_iv_trophyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_trophy"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workoutFinish_cl_pageTitleContainer"/>

    <TextView
        android:id="@+id/workoutFinish_tv_congratulationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="24sp"
        android:textColor="#223767"
        android:textStyle="bold"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@id/workoutFinish_iv_trophyImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/workoutFinish_tv_accomplishmentText"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:text="Youâ€™ve Completed Your Workout"
        android:gravity="center"
        android:textColor="#2970FF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/workoutFinish_tv_congratulationsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/workoutStart_cl_closeButton"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:background="@drawable/shape_workout_list_button"
        android:layout_marginBottom="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/workoutStart_tv_closeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>